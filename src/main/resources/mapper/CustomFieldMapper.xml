<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.oneclick.dao.CustomFieldDao">

    <resultMap type="com.hu.oneclick.model.domain.CustomField" id="CustomFieldMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="scope" column="scope" jdbcType="VARCHAR"/>
        <result property="mandatory" column="mandatory" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="fieldName" column="field_name" jdbcType="VARCHAR"/>
        <result property="projectId" column="project_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CustomFieldMap">
        select
          id, user_id, `type`, scope, mandatory, create_time, update_time, field_name,project_id
        from oneclick.custom_field
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CustomFieldMap">
        select
          id, user_id,  `type`, scope, mandatory, create_time, update_time, field_name, project_id
        from oneclick.custom_field
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CustomFieldMap">
        select
        id, user_id,  `type`, scope, mandatory, create_time, update_time, field_name, project_id
        from oneclick.custom_field
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="type != null and type != ''">
                and  `type` = #{type}
            </if>
            <if test="scope != null and scope != ''">
                and scope = #{scope}
            </if>
            <if test="mandatory != null and mandatory != ''">
                and mandatory = #{mandatory}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="fieldName != null and fieldName != ''">
                and field_name = #{fieldName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into oneclick.custom_field
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">
                user_id,
            </if>
            <if test="type != null and type != ''">
                `type`,
            </if>
            <if test="scope != null and scope != ''">
                scope,
            </if>
            <if test="mandatory != null and mandatory != ''">
                mandatory,
            </if>

            <if test="fieldName != null and fieldName != ''">
                field_name,
            </if>
            <if test="projectId != null and projectId != ''">
                project_id,
            </if>
            create_time,
            update_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">
                #{userId},
            </if>
            <if test="type != null and type != ''">
                #{type},
            </if>
            <if test="scope != null and scope != ''">
                #{scope},
            </if>
            <if test="mandatory != null and mandatory != ''">
                #{mandatory},
            </if>
            <if test="fieldName != null and fieldName != ''">
                #{fieldName},
            </if>
            <if test="projectId != null and projectId != ''">
                #{projectId},
            </if>
            NOW(),
            NOW()
        </trim>
    </insert>


    <!--通过主键修改数据-->
    <update id="update">
        update oneclick.custom_field
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="type != null and type != ''">
                `type` = #{type},
            </if>
            <if test="scope != null and scope != ''">
                scope = #{scope},
            </if>
            <if test="mandatory != null and mandatory != ''">
                mandatory = #{mandatory},
            </if>
            <if test="fieldName != null and fieldName != ''">
                field_name = #{fieldName},
            </if>
            <if test="projectId != null and projectId != ''">
                project_id = #{projectId},
            </if>
            update_time = NOW(),
        </set>
        where id = #{id}
        and user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from oneclick.custom_field where id = #{id} and user_id = #{userId}
    </delete>

</mapper>
