            </where>

        </select>
        -->

    <select id="getDropDownBox" resultMap="CustomFileldLinkVoResultMap"
            parameterType="com.hu.oneclick.model.domain.dto.CustomFieldDto">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM custom_fields
        <where>
            project_id = #{customFieldDto.projectId}
            AND field_type IN ('dropDown', 'multiList', 'userList', 'number', 'linkedDropDown')
        </where>

    </select>
</mapper>
